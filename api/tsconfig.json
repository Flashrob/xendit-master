{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "**/*",
    "src/**/*",
    "migrate.ts",
    "app.ts",
    "migrations/*",
    "common/*",
    "test/**/*",
    "src/**/test/fixtures/*.json"
  ]
}
